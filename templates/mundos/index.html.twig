{% extends 'base.html.twig' %}

{% block title %}Mundos index{% endblock %}

{% block body %}
    <h1>Mundos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Img</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mundo in mundos %}
            <tr>
                <td>{{ mundo.id }}</td>
                <td>{{ mundo.img }}</td>
                <td>
                    <a href="{{ path('app_mundos_show', {'id': mundo.id}) }}">show</a>
                    <a href="{{ path('app_mundos_edit', {'id': mundo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_mundos_new') }}">Create new</a>
{% endblock %}
